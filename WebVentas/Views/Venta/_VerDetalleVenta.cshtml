@model List<WebVentas.Models.ModelBD.DetalleVentum>
@{
    var Total = Model.Sum(d=>d.Cantidad * d.PrecioUnidad);
}
<style>
    #tablaDetalle {
        white-space: nowrap;
        overflow-x: auto;
    }
</style>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold " id="exampleModalLongTitle">DETALLE DE VENTA</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-sm" id="tablaDetalle">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Descripcion</th>
                    <th>Cantidad</th>
                    <th>Unidad Medida</th>
                    <th>Precio</th>
                    <th>SubTotal</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
              {
                   <tr>
                         <td>@item.FkProductoNavigation.Codigo</td>
                         <td>@item.FkProductoNavigation.NombreProducto</td>
                         <td>@item.Cantidad</td>
                         <td>KG</td>
                         <td>@item.PrecioUnidad</td>
                         <td>@item.SubTotal</td>
                   </tr>
              }
            </tbody>
        </table>
        <div class="col">
            <h6>Total: <span class="font-weight-bold">S/@Total</span></h6>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>