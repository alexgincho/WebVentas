@model WebVentas.Models.ModelBD.Producto

<div class="row mt-5">
    <!-- Vista Ver Producto Add -->
    <div class="col-md-8">
        <!-- IMAGEN DEL PRODUCTO -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://via.placeholder.com/468x260?text=Visit+Blogging.com+Now" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://via.placeholder.com/468x260?text=Visit+Blogging.com+Now" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://via.placeholder.com/468x260?text=Visit+Blogging.com+Now" class="d-block w-100" alt="...">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
    </div>
    <div class="col-md-4">
        <!-- DESCRIPCION DEL PRODUCTO -->
        <div class="row">
            <div class="col-md-12 content-producto">
                <h5>@Model.NombreProducto</h5>
                <h6 class="text-muted">@Model.FkCategoriaNavigation.Descripcion</h6>
                <h5 class="text-danger">S/ @Model.PrecioVenta</h5>
                <div class="card">
                    <div class="card-header">
                      <p class="text-success font-weight-bold"><i class="fa fa-arrow-alt-circle-right"></i> Recógelo gratis en tienda</p>
                      <a class="text-info" href="#"><i class="fa fa-car-crash"></i> Calcular envío en otra dirección</a>
                    </div>
                     <div class="card-body">
                       <label class="card-text">Cantidad : <span class="text-muted">Kg.</span> </label>
                       <div class="input-group mb-3">
                            <input type="number" class="form-control form-control-sm" placeholder="Ingrese cantidad">                           
                        </div>
                       <button type="button" class="btn btn-danger btn-block" id="btnAgregar">Añadir al Carrito</button>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="/js/Producto/_AgregarCarrito.js"></script>
}